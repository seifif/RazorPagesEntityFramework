@page
@model RazorPagesEntityFramework.Pages.Drivers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Driver.ID" />
            <div class="form-group">
                <label asp-for="Driver.LastName" class="control-label"></label>
                <input asp-for="Driver.LastName" class="form-control" />
                <span asp-validation-for="Driver.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.FirstName" class="control-label"></label>
                <input asp-for="Driver.FirstName" class="form-control" />
                <span asp-validation-for="Driver.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.License" class="control-label"></label>
                <select asp-for="Driver.License" asp-items="Html.GetEnumSelectList<EntityFramework.Models.License>()" class="form-control"></select>
                <span asp-validation-for="Driver.License" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
